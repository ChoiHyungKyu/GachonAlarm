<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="Wake up"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#FF0000"/>

    <Button
        android:id="@+id/force_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/result_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-61dp"
        android:text="start to control" />

    <Button
        android:id="@+id/force_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/force_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-55dp"
        android:text="Force to stop" />

    <Button
        android:id="@+id/force_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/force_stop"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-55dp"
        android:text="Force to start" />

</RelativeLayout>